{
  "name": "book-finder",
  "author": "Uriel",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "axios": "^0.19.0",
    "prop-types": "^15.7.2",
    "querystring": "^0.2.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-redux": "^7.1.0",
    "react-router-dom": "^5.0.1",
    "react-scripts": "3.0.1",
    "redux": "^4.0.1",
    "redux-saga": "^1.0.3",
    "styled-components": "^4.3.2",
    "styled-icons": "^8.1.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "deploy:clear": "cross-env rm -rf /.build",
    "deploy:build": "react-scripts build",
    "deploy:surge": "node_modules/.bin/surge --project ./build --domain book-finder-test.surge.sh",
    "deploy": "cross-env run-s deploy:clear deploy:build deploy:surge"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 5 chrome version",
      "last 5 firefox version",
      "last 5 safari version"
    ]
  },
  "devDependencies": {
    "babel-plugin-macros": "^2.6.1",
    "babel-plugin-styled-components": "^1.10.1",
    "cross-env": "^5.2.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^5.0.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.13.0",
    "husky": "^2.4.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "redux-devtools-extension": "^2.13.8",
    "surge": "^0.21.3"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "cross-env CI=true react-scripts test && npm run deploy"
    }
  }
}
